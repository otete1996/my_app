<div class="row">
  <div class="col-lg-12">

    <h3>
        <b>トピック：<%= @article.content %></b>
    </h3>

    <p>
        <b>日時：<%= @article.date %></b>
    </p>
    <%= link_to("戻る","/index" ,class: "btn btn-success") %>
  </div>
</div>

<hr>
    <h6>コメント一覧</h6>
    <% @posts.each do |comment| %>
      <div class="media">
        <div class="media-body">
          <%= simple_format(comment.content) %>
          <p class="text-muted">
            投稿記事:<%= comment.created_at.strftime('%Y-%m-%d %H:%M') %>
            <% if comment.user.id==current_user.id %>
            <%= link_to "削除する", post_path(comment), method: :delete %>
            <% end %>

          </p>
        </div>
      </div>
    <% end %>

<%= form_with model: @post, url: { controller: :posts, action: :create }, local: true do |form| %>
      <div class="form-group">
        <%= form.label :content , 'コメント内容' %><br>
        <%= form.text_area :content, class: "form-control" %>
      </div>
      <%= form.hidden_field :article_id, value: @article.id %>
      <%= form.hidden_field :user_id, value: @user.id %>
      <%= form.submit class: "btn btn-success" %>
    <% end %>
